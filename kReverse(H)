Node *rev_List(Node *temp){
    if(temp == NULL || temp->next == NULL) return temp;
    Node *smallOut = rev_List(temp->next);
    Node *tail = temp->next;
    tail->next = temp;
    temp->next = NULL;//this libe is important you also have to change temp
    return smallOut;
}
Node *kReverse(Node *head, int k)
{
    if(k<2 || head==NULL || head->next==NULL) return head;
    Node *temp=head,*finalHead=NULL,*finalTail=NULL;
    while(temp!=NULL){
        int count=0;
        Node *currHead=NULL,*currTail=NULL;
        while(count<k && temp!=NULL){
            if(currHead==NULL) {
                currHead=temp;
                currTail=temp;
            }
            else{
                currTail->next = temp;
				currTail = temp;   
            }
            count++;
			temp = temp->next;
        }
        //cout<<currHead->data <<"  "<< currTail->data<<endl;
        //temp = temp->next;
        currTail->next = NULL;
        Node *curr_reversedList = rev_List(currHead);
        if(finalHead == NULL){
            finalHead = curr_reversedList;
            finalTail = curr_reversedList;
        curr_reversedList= curr_reversedList->next;
//when added the first ekement at final Head we should move forward by one!! 
        }
        while(curr_reversedList!=NULL){// to attach remaining nodes of curr_reversedList
                finalTail->next = curr_reversedList;
                finalTail = curr_reversedList;
                curr_reversedList = curr_reversedList->next;
            }
    }
    finalTail->next = NULL;
    
	return finalHead;
}


APPROACH 2

Node *kReverse(Node *head, int k){
    if(head==NULL || head->next==NULL){
        return head;
    }
    Node *temp=head;
    Node *h1=head;
    Node *t1=head;
    Node *h2=head;
    int count=1;
    while(count!=k){
        temp=temp->next;
        count++;
    }
    t1=temp;
    h2=t1->next;
    t1->next=NULL;
}

APPROACH 3

Node* kReverse(Node* head, int k){
    // base case
    if(head==NULL){
        return NULL;
    }
    Node* current = head;
    Node* next = NULL;
    Node* prev = NULL;
    int count = 0;
   // reverse first k nodes of the linked list 

    while (current != NULL && count < k) {
        next = current->next;
        current->next = prev;
        prev = current;
        current = next;
        count++;
    }
    // next is now a pointer to (k+1)th node
   // Recursively call for the list starting from current.
   // And make rest of the list as next of first node 
    if (next != NULL)
        head->next = kReverse(next, k);
    // prev is new head of the input list /
    return prev;
}
