int findNode(Node *head, int n){
    Node *temp=head;
    int count=0;
    while(temp!=NULL){
    if(temp->data==n){
        return count;
    }
    else{
    temp=temp->next;
    count++;
    }
    }
    return -1;
}

RECURSIVE APPROACH

int findNodeRec(Node *head, int n){
    if(head==NULL){
        return -1;
    }
    if(head->data==n){
        return 0;
    }
    int index = findNodeRec(head->next,n);
    if(index==-1){
        return -1;
    }
    return 1+index;
}
